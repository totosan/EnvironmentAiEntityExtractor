    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/EntityExtractor.dll",
            "args": ["C:\\Temp\\ImageProcessing_tomowArea","C:\\Temp\\pics","-s"],
            //"args": ["C:\\Temp\\ImageProcessing_tomowArea","C:\\Temp\\ImageProcessing_tomowArea_out"],
            //"args": ["C:\\Temp\\ImageProcessing_tomowArea","C:\\temp\\outs"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}